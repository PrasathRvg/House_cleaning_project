@model IEnumerable<housecleaning4Api.Models.UserTbl>

@{
    ViewData["Title"] = "DetailKk";
    <link href="~/css/style.css" rel="stylesheet" />
}
<section class="view-bg">
    <div class="category">
        <select onclick="getcity(this.options[this.selectedIndex].value)" class="city" id="city">
            <option value="select" selected disabled>Select City</option>
            <option value="index">All Cities</option>
            <option value="DetailTvm">Tiruvannamalai</option>
            <option value="Detailch">Chennai</option>
            <option value="Detailkk">Kanyakumari</option>
        </select>
    </div>
    @foreach (var item in Model)
    {

        <div class="box">
            <div class="txt-content">
                <h3>DETAILS</h3>
                <div class="details">
                    <div class="d1">
                        <div class="name">
                            <h4>Fullname</h4>
                            <p>@Html.DisplayFor(modelItem => item.Fullname)</p>
                        </div>
                        <div class="place">
                            <h4>Phone no.</h4>
                            <p>@Html.DisplayFor(modelItem => item.PhoneNo)</p>
                        </div>
                    </div>
                    <div class="d2">
                        <div class="sqft">
                            <h4>City</h4>
                            <p>@Html.DisplayFor(modelItem => item.City)</p>
                        </div>
                        <div class="days">
                            <h4>Preffered days</h4>
                            <p>@Html.DisplayFor(modelItem => item.PreferredDays)</p>
                        </div>
                    </div>
                    <div class="cost"><a asp-action="Details" asp-controller="User" asp-route-id="@item.UserId">View All Details</a></div>
                </div>
            </div>
            <div class="gif">
                <img src="~/images/cleaningspray.gif" alt="cleaningspray gif">
            </div>
        </div>
    }

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        function getcity(city) {
            if (city != "select") {
                window.location.href = '/user/' + city;

            }
        }
    </script>

}